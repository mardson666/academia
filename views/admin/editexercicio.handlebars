{{#each erros}}
	<div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}
<div class="card">

	<div class="card-body">
		<h1>Editar exercicio</h1>
		<form action="/admin/exercicio/edit" method="POST">
			<input type="hidden" name="id" value="{{exercicio._id}}">
			<label for="nome">Nome</label>
			<input type="text" name="nome" class="form-control" value="{{exercicio.nome}}">
			<label for="slug">Slug</label>
			<input type="text" name="slug" class="form-control" value="{{exercicio.slug}}">
			<label for="descricao">Descrição</label>
			<input type="text" name="descricao" class="form-control" value="{{exercicio.descricao}}">
			
			<label for="categoria">categoria</label>
			<select name="categoria" class="form-select">
				{{#each categoria}}
				<option value="{{_id}}">{{nome}} </option>
				{{else}}
				<option> nenhuma categoria registrada</option>

				{{/each}}
			</select>
			<button type="submit" class="btn btn-success mt-4">Editar postagem</button>
		</form>
	</div>
</div>