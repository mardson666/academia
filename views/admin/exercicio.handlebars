{{#each erros}}
	<div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}

<h2>Lista de Exercicio:</h2>
<hr>
<a href="/admin/exercicio/add"><button class="btn btn-success">Nova Exercicio</button></a>

{{#each exercicio}}
	<div class="card mt-2">
		<div class="card-body">
			<h3>{{nome}}</h3>
			<small>Slug:{{slug}}</small><br>
			<small>Data de Criação : {{date}}</small>
			<p>Descrição: {{descricao}}</p>
			<p>Categoria:{{categoria.nome}}</p>
				
			<a href="/admin/exercicio/edit/{{_id}}"><button class="btn btn-success mt-4" >Editar exercicio</button></a>
			<form action="/admin/exercicio/deletar" method="POST">
				<input type="hidden" name="id" value="{{_id}}">
				<button type="submit" class="btn btn-danger mt-3">Excluir exercicio</button>
			</form>
		</div>
	</div>
{{else}}
<h4>Nenhuma exercicio registrado</h4>

{{/each}}